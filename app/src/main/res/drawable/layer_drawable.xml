<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/drawable"
        android:bottom="5dp"
        android:drawable="@mipmap/ic_launcher"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>
    <!--下面的item覆盖上面的，left、top、right、bottom为相对view的偏移量-->